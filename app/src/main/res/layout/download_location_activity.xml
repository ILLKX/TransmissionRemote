<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pinned_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="@string/pinned"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/HeaderStyle"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/pinned_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/pinned_header"
                tools:listitem="@layout/download_location_item_layout"/>

            <androidx.constraintlayout.widget.Group
                android:id="@+id/pinned_group"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:constraint_referenced_ids="pinned_header, pinned_list"/>

            <include layout="@layout/divider"
                android:id="@+id/default_location_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/pinned_list"/>

            <TextView
                android:id="@+id/default_location_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="@string/default_download_location"
                app:layout_constraintTop_toBottomOf="@id/default_location_divider"
                style="@style/HeaderStyle"/>

            <TextView
                android:id="@+id/default_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:maxLines="3"
                android:ellipsize="end"
                android:textSize="@dimen/tr_abc_text_size_subhead_material"
                app:layout_constraintTop_toBottomOf="@id/default_location_header"
                tools:text="/home/user/Downloads" />

            <include layout="@layout/divider"
                android:id="@+id/other_locations_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/default_location"/>

            <TextView
                android:id="@+id/other_locations_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="@string/other_download_locations"
                app:layout_constraintTop_toBottomOf="@id/other_locations_divider"
                style="@style/HeaderStyle"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/other_locations_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/other_locations_header"
                tools:listitem="@layout/download_location_item_layout"/>

            <androidx.constraintlayout.widget.Group
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:constraint_referenced_ids="other_locations_divider, other_locations_header, other_locations_list"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <Button
        android:id="@+id/select_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/select"
        app:layout_constraintStart_toEndOf="@id/start_guideline"
        app:layout_constraintTop_toBottomOf="@id/start_when_added_checkbox"
        app:layout_constraintEnd_toStartOf="@id/end_guideline"
        app:layout_constraintBottom_toBottomOf="parent"/>
</LinearLayout>
